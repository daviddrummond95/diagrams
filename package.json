{
  "name": "@diagrams/core",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "diagrams": "./src/cli.ts"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist", "fonts"],
  "scripts": {
    "dev": "bun run src/cli.ts",
    "build": "bun build ./src/index.ts --outdir ./dist --target node",
    "build:cli": "bun build ./src/cli.ts --compile --outfile diagrams",
    "typecheck": "tsc --noEmit",
    "test": "bun test"
  },
  "dependencies": {
    "@resvg/resvg-js": "^2.6.0",
    "commander": "^14.0.0",
    "satori": "^0.12.0",
    "simple-icons": "^16.8.0",
    "yaml": "^2.6.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.7.0"
  }
}
